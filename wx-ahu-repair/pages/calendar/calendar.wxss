/* pages/calendar/calendar.wxss */

.selected_date {
    padding: 20rpx;
    overflow: hidden;
}

.selected_date>view {
    width: 33.3%;
    float: left;
}

.calendar_panel {
    width: 100%;
    height: 600rpx;
}

.calendar_box {
    width: 100%;
    background: #fff;
    overflow: hidden;
    border-bottom: 1rpx solid #ececec;
}

.weekday_label {
    width: 14.28%;
    float: left;
    display: block;
    text-align: center;
    font-size: 28rpx;
    padding: 10rpx 0;
}

.weekday_label>text {
    width: 60rpx;
    height: 60rpx;
    line-height: 50rpx;
    display: inline-block;
}

.select_icon {
    width: 40rpx;
    height: 40rpx;
}

.active_date {
    background: #0099CC;
    color: #fff;
    border-radius: 50%;
}

.show_box {
    padding: 20rpx;
    font-size: 28rpx;
}

.calendar_box:nth-child(2) .weekday_label {
    float: right;
}
.text_center{
    text-align: center
}
